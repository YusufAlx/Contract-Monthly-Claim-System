<Window x:Class="Contract_Monthly_Claim_System.TrackClaimsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Track Claim"
        Height="300" Width="450"
        Background="{StaticResource AppBackground}"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>
            <Label Content="Track Claim" Style="{StaticResource HeaderLabel}" Margin="0,0,0,10"/>

            <Label Content="Enter Tracking ID:"/>
            <TextBox x:Name="txtTracking" Style="{StaticResource CrimsonTextBox}" Margin="0,0,0,10"/>

            <Button Content="Search"
                    Style="{StaticResource CrimsonButton}"
                    Click="Search_Click"
                    Width="120" Height="45"
                    HorizontalAlignment="Center"/>

            <TextBlock x:Name="txtResult"
                       TextWrapping="Wrap"
                       FontSize="14"
                       Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
