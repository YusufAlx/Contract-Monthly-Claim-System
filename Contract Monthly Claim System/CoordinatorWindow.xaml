<Window x:Class="Contract_Monthly_Claim_System.CoordinatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Coordinator Review" Height="600" Width="900" Background="{StaticResource AppBackground}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Coordinator Review Dashboard" Style="{StaticResource HeaderLabel}" Margin="0,0,0,8"/>

        <DataGrid x:Name="dgClaims" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="TrackingID" Binding="{Binding TrackingID}" Width="140"/>
                <DataGridTextColumn Header="Lecturer" Binding="{Binding LecturerName}" Width="180"/>
                <DataGridTextColumn Header="Hourly Rate (R)" Binding="{Binding HourlyRate}" Width="110"/>
                <DataGridTextColumn Header="Hours Worked" Binding="{Binding HoursWorked}" Width="110"/>
                <DataGridTextColumn Header="Monthly Claim (R)" Binding="{Binding MonthlyClaim}" Width="130"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="90"/>
                <DataGridTemplateColumn Header="Documents" Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="View Docs" Click="ViewDocs_Click" Tag="{Binding Id}" Style="{StaticResource CrimsonButton}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Actions" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Approve" Click="Approve_Click" Tag="{Binding Id}" Margin="2" Style="{StaticResource CrimsonButton}" Width="70"/>
                                <Button Content="Reject" Click="Reject_Click" Tag="{Binding Id}" Margin="2" Style="{StaticResource CrimsonButton}" Width="70"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>