<Window x:Class="Contract_Monthly_Claim_System.CoordinatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Coordinator Review"
        Height="600" Width="900"
        Background="{StaticResource AppBackground}"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <StackPanel>
            <Label Content="Coordinator Review" Style="{StaticResource HeaderLabel}"/>

            <DataGrid x:Name="dgClaims"
                      AutoGenerateColumns="False"
                      SelectionMode="Extended"
                      Height="350"
                      Margin="0,10">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tracking ID" Binding="{Binding TrackingID}" Width="150"/>
                    <DataGridTextColumn Header="Lecturer" Binding="{Binding LecturerName}" Width="200"/>
                    <DataGridTextColumn Header="Amount" Binding="{Binding MonthlyClaim}" Width="120"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="View Documents" Click="ViewDocs_Click" Style="{StaticResource CrimsonButton}" Margin="5"/>
                <Button Content="Approve Selected" Click="ApproveSelected_Click" Style="{StaticResource CrimsonButton}" Margin="5"/>
                <Button Content="Reject Selected" Click="RejectSelected_Click" Style="{StaticResource CrimsonButton}" Margin="5"/>
                <Button Content="Generate Invoice(s)" Click="GenerateInvoices_Click" Style="{StaticResource CrimsonButton}" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
