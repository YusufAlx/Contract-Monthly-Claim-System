<Window x:Class="Contract_Monthly_Claim_System.HRWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HR Dashboard"
        Height="600"
        Width="900"
        Background="{StaticResource AppBackground}"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <StackPanel>
            <Label Content="HR - Invoices and Reports"
                   Style="{StaticResource HeaderLabel}"
                   Margin="0,0,0,15"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button Content="Refresh"
                        Style="{StaticResource CrimsonButton}"
                        Margin="5"
                        Click="Refresh_Click" />

                <Button Content="Export CSV"
                        Style="{StaticResource CrimsonButton}"
                        Margin="5"
                        Click="ExportCsv_Click" />

                <Button Content="Export Excel"
                        Style="{StaticResource CrimsonButton}"
                        Margin="5"
                        Click="ExportExcel_Click" />
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid x:Name="dgInvoices"
                      AutoGenerateColumns="False"
                      Height="420"
                      Margin="0,10,0,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Invoice #" Binding="{Binding InvoiceNumber}" Width="150"/>
                    <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimID}" Width="120"/>
                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="120"/>
                    <DataGridTextColumn Header="Generated At" Binding="{Binding GeneratedAt}" Width="200"/>

                    <DataGridTemplateColumn Header="Open" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Open"
                                        Style="{StaticResource CrimsonButton}"
                                        Tag="{Binding FilePath}"
                                        Click="OpenInvoice_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
