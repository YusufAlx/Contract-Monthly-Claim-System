<Window x:Class="Contract_Monthly_Claim_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CMCS"
        Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#FFF9F9F9">

    <Window.Resources>
        <!-- Rounded Buttons with Hover Effect -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                CornerRadius="20"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#B22222"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Title Bar Buttons Hover -->
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B22222"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Grid Background="Crimson" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="CMCS"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>

            <!-- Minimize Button -->
            <Button Grid.Column="1" Content="—"
                    Width="35" Height="25"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Bold"
                    Click="Minimize_Click"
                    Style="{StaticResource TitleBarButtonStyle}"/>

            <!-- Close Button -->
            <Button Grid.Column="2" Content="✕"
                    Width="35" Height="25"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Bold"
                    Click="Close_Click"
                    Style="{StaticResource TitleBarButtonStyle}"/>
        </Grid>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0">
            <Button Content="Submit Claim"
                    Width="140" Height="50"
                    Background="Crimson" Foreground="White"
                    Click="Button_Click"
                    Style="{StaticResource RoundedButtonStyle}"/>
            <Button Content="Upload Doc"
                    Width="140" Height="50"
                    Background="Crimson" Foreground="White"
                    Margin="20,0,0,0"
                    Style="{StaticResource RoundedButtonStyle}"/>
            <Button Content="Verify Claims"
                    Width="140" Height="50"
                    Background="Crimson" Foreground="White"
                    Margin="20,0,0,0"
                    Style="{StaticResource RoundedButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
