<Window x:Class="Contract_Monthly_Claim_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CMCS"
        Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#FFF9F9F9">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Background="Crimson" Grid.Row="0" MouseDown="TopBar_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="CMCS - Contract Monthly Claim System"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>

            <Button Grid.Column="1" Content="—"
                    Width="35" Height="25"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Bold"
                    Click="Minimize_Click"/>

            <Button Grid.Column="2" Content="✕"
                    Width="35" Height="25"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Bold"
                    Click="Close_Click"/>
        </Grid>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="40,40,40,0">
            <TextBlock Text="Welcome to the Monthly Claim System Application"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#333"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <TextBlock Text="Please use the options below to manage your claims, upload supporting documents, and verify existing claims."
                       FontSize="14"
                       Foreground="#555"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <Separator Height="2" Margin="0,0,0,20" Background="#DDD"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Lecturer"
                        Width="160" Height="50"
                        Click="Lecturer_Click"
                        Background="Crimson" Foreground="White"
                        Margin="0,0,20,0"/>
                <Button Content="Programme Coordinator"
                        Width="160" Height="50"
                        Background="Crimson" Foreground="White"
                        Click="CoordinatorButton_Click"
                        Margin="0,0,20,0"/>
                <Button Content="Track Claims"
                        Width="160" Height="50"
                        Background="Crimson" Foreground="White" Click="Button_Click_1"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
