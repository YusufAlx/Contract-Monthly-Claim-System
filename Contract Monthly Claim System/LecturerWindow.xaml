<Window x:Class="Contract_Monthly_Claim_System.LecturerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lecturer - CMCS"
        Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#FFF9F9F9">

    <Window.Resources>
        <ResourceDictionary Source="Themes/SharedStyles.xaml"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Background="Crimson" Grid.Row="0" MouseDown="TopBar_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Lecturer Portal - Submit Claims"
                       Foreground="White" FontSize="14" FontWeight="Bold"
                       VerticalAlignment="Center" Margin="10,0,0,0"/>

            <Button Grid.Column="1" Content="—" Width="35" Height="25"
                    Foreground="White" FontSize="14"
                    Click="Minimize_Click"
                    Style="{StaticResource TitleBarButtonStyle}"/>
            <Button Grid.Column="2" Content="✕" Width="35" Height="25"
                    Foreground="White" FontSize="14"
                    Click="Close_Click"
                    Style="{StaticResource TitleBarButtonStyle}"/>
        </Grid>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="40,40,40,0">
            <TextBlock Text="Welcome Lecturer, please submit your monthly claim and supporting documents."
                       FontSize="18" FontWeight="Bold" Foreground="#333"
                       TextAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <Button Content="Submit Claim"
                        Width="200" Height="50"
                        Background="Crimson" Foreground="White"
                        Style="{StaticResource RoundedButtonStyle}" Margin="0,0,0,15"/>
                <Button Content="Upload Supporting Documents"
                        Width="200" Height="50"
                        Background="Crimson" Foreground="White"
                        Style="{StaticResource RoundedButtonStyle}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
