<Window x:Class="Contract_Monthly_Claim_System.LecturerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lecturer Claim Submission" Height="500" Width="600"
        Background="{StaticResource AppBackground}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Submit Monthly Claim" Style="{StaticResource HeaderLabel}" Margin="0,0,0,8"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,8,0,8">
            <StackPanel Orientation="Horizontal" Margin="0,6">
                <Label Content="Full name:" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="txtFullName" Width="380" Style="{StaticResource CrimsonTextBox}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,6">
                <Label Content="Hourly rate (R):" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="txtHourlyRate" Width="160" Style="{StaticResource CrimsonTextBox}" />
                <Label Content="Hours worked:" Width="110" Margin="12,0,0,0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtHoursWorked" Width="90" Style="{StaticResource CrimsonTextBox}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,6">
                <Label Content="Monthly Claim (R):" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="txtMonthlyClaim" Width="380" IsReadOnly="True" Style="{StaticResource CrimsonTextBox}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,12">
                <Button x:Name="btnAddFiles" Content="Add Supporting Documents" Click="btnAddFiles_Click" Style="{StaticResource CrimsonButton}" />
                <TextBlock Text="  (.pdf, .docx, .xlsx — max 100 MB each)" VerticalAlignment="Center" Margin="8,0,0,0"/>
            </StackPanel>

            <GroupBox Header="Uploaded Files" Margin="0,6,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListBox x:Name="lstFiles" Grid.Row="0" Margin="6"/>
                    <Button x:Name="btnSubmit" Grid.Row="1" Content="Submit Claim" Click="btnSubmit_Click" Style="{StaticResource CrimsonButton}" Height="40" Margin="6" HorizontalAlignment="Center" Width="200"/>
                </Grid>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>