<Window x:Class="Contract_Monthly_Claim_System.LecturerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lecturer Claim Submission"
        Height="550" Width="600"
        Background="{StaticResource AppBackground}"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <StackPanel>
            <Label Content="Lecturer Claim Submission" Style="{StaticResource HeaderLabel}"/>

            <Label Content="Full Name:"/>
            <TextBox x:Name="txtName" Style="{StaticResource CrimsonTextBox}"/>

            <Label Content="Hourly Rate (R):"/>
            <TextBox x:Name="txtRate" Style="{StaticResource CrimsonTextBox}"/>

            <Label Content="Hours Worked:"/>
            <TextBox x:Name="txtHours" Style="{StaticResource CrimsonTextBox}"/>

            <Label Content="Uploaded Documents:"/>
            <ListBox x:Name="lstFiles" Height="100"/>

            <Button Content="Upload Documents"
                    Click="Upload_Click"
                    Style="{StaticResource CrimsonButton}"
                    Margin="0,10"/>

            <Button Content="Submit Claim"
                    Click="Submit_Click"
                    Style="{StaticResource CrimsonButton}"
                    Height="55"
                    FontSize="18"/>
        </StackPanel>
    </Grid>
</Window>
