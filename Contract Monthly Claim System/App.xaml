<Application x:Class="Contract_Monthly_Claim_System.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <SolidColorBrush x:Key="AppBackground" Color="White"/>
        <SolidColorBrush x:Key="CrimsonBrush" Color="#DC143C"/>

        
        <Style x:Key="CrimsonTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource CrimsonBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource CrimsonBrush}"/>
            <Setter Property="Padding" Value="6"/>
        </Style>

      
        <Style x:Key="CrimsonButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource CrimsonBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>

        <!-- Header label style -->
        <Style x:Key="HeaderLabel" TargetType="Label">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Application.Resources>
</Application>